<dashboard script="dyn_form.js" version="1.1">
  <label>Configuration Dashboard</label>
  <row>
    <panel>
      <html>
        <h1>Configuration Form</h1>

        <!-- Server Type 1 (static) -->
        <form id="collect">
          <h2>Server Type 1</h2>
          <label for="url">URL:</label>
          <input type="text" id="url" />
          <label for="username">Username:</label>
          <input type="text" id="username" />
          <label for="password">Password:</label>
          <input type="password" id="password" />
        </form>

        <!-- Dynamic Server Type 2 container -->
        <div id="dynamic-server-blocks"></div>

        <button class="btn" id="add-server">Add Server Type 2</button>
        <button class="btn" id="submit-config">Submit Configuration</button>
        <div id="response-msg"></div>

        <!-- Hidden template for cloning -->
        <div id="server-template" style="display:none;">
          <div class="server-block">
            <h3>Server Type 2</h3>
            <label>URL:</label>
            <input type="text" class="url" />
            <label>Username:</label>
            <input type="text" class="username" />
            <label>Password:</label>
            <input type="password" class="password" />
            <hr/>
          </div>
        </div>
      </html>
    </panel>
  </row>
</dashboard>